		<!-- shift right border 1 px to the right, so next tab is drawn over it and instead of two 1px borders we see only one -->
		<drawstep	func = 'square'
					fill = 'foreground'
					fg_color = 'border_fg'
					width = '1'
					xpos = 'right'
					padding = '0,0,-1,0'
		/>
		<!-- draw other borders normally, but don't draw bottom one so tab visually continues its contents -->
		<drawstep	func = 'square'
					fill = 'foreground'
					fg_color = 'border_fg'
					width = '1'
					xpos = 'left'
		/>
		<drawstep	func = 'square'
					fill = 'foreground'
					fg_color = 'border_fg'
					height = '1'
					ypos = 'top'
		/>
	</drawdata>

	<!-- inactive tab -->
	<drawdata id = 'tab_inactive' cache = 'false'>
		<text		font = 'text_default'
					text_color = 'color_normal'
					vertical_align = 'center'
					horizontal_align = 'center'
		/>

		<drawstep	func = 'square'
					fill = 'background'
					bg_color = 'tab_inactive_bg'
		/>

		<!-- shift right border 1 px to the right, so next tab is drawn over it and instead of two 1px borders we see only one -->
		<drawstep	func = 'square'
					fill = 'foreground'
					fg_color = 'border_fg'
					width = '1'
					xpos = 'right'
					padding = '0,0,-1,0'
		/>
		<!-- draw other borders normally -->
		<drawstep	func = 'square'
					fill = 'foreground'
					fg_color = 'border_fg'
					width = '1'
					xpos = 'left'
		/>
		<drawstep	func = 'square'
					fill = 'foreground'
					fg_color = 'border_fg'
					height = '1'
					ypos = 'top'
		/>
		<drawstep	func = 'square'
					fill = 'foreground'
					fg_color = 'border_fg'
					height = '1'
					ypos = 'bottom'
		/>
	</drawdata>



	<!-- ==========
		 Scrollbars
		 ========== -->


	<!-- background -->
	<drawdata id = 'scrollbar_base' cache = 'false'>
		<drawstep	func = 'square'
					fill = 'background'
					bg_color = 'scroll_bg'
					stroke = '1'
					fg_color = 'border_fg'
		/>
	</drawdata>

	<!-- scrollbar handle -->
	<drawdata id = 'scrollbar_handle_idle' cache = 'false'>
		<drawstep	func = 'square'
					fill = 'background'
					bg_color = 'scroll_idle'
		/>
		<!-- top and bottom borders -->
		<drawstep	func = 'square'
					fill = 'foreground'
					fg_color = 'border_fg'
					height = '1'
					ypos = 'top'
					padding = '0,-1,0,0'
		/>
		<drawstep	func = 'square'
					fill = 'foreground'
					fg_color = 'border_fg'
					height = '1'
					ypos = 'bottom'
					padding = '0,0,0,-1'
		/>
	</drawdata>
	<drawdata id = 'scrollbar_handle_hover' cache = 'false'>
		<drawstep	func = 'square'
					fill = 'background'
					bg_color = 'scroll_hover'
		/>
		<!-- top and bottom borders -->
		<drawstep	func = 'square'
					fill = 'foreground'
					fg_color = 'border_fg'
					height = '1'
					ypos = 'top'
					padding = '0,-1,0,0'
		/>
		<drawstep	func = 'square'
					fill = 'foreground'
					fg_color = 'border_fg'
					height = '1'
					ypos = 'bottom'
					padding = '0,0,0,-1'
		/>
	</drawdata>

	<!-- scrollbar buttons -->
	<drawdata id = 'scrollbar_button_idle' cache = 'false' resolution = 'y>399'>
		<drawstep	func = 'square'
					fill = 'background'
					bg_color = 'scroll_bg'
					stroke = '1'
					fg_color = 'border_fg'
		/>
		<drawstep	func = 'triangle'
					orientation = 'top'
					fill = 'foreground'
					fg_color = 'scroll_idle'
					width = '9'
					height = '8'
					xpos = 'right'
					ypos = 'center'
					padding = '1,0,3,0'
		/>
	</drawdata>
	<drawdata id = 'scrollbar_button_hover' cache = 'false' resolution = 'y>399'>
		<drawstep	func = 'square'
					fill = 'background'
					bg_color = 'scroll_button_hover'
					stroke = '1'
					fg_color = 'border_fg'
		/>
		<drawstep	func = 'triangle'
					orientation = 'top'
					fill = 'foreground'
					fg_color = 'scroll_triangle_hover'
					width = '9'
					height = '8'
					xpos = 'right'
					ypos = 'center'
					padding = '1,0,3,0'
		/>
	</drawdata>

	<!-- scrollbar buttons (lowres) -->
	<drawdata id = 'scrollbar_button_idle' cache = 'false' resolution = 'y<400'>
		<drawstep	func = 'square'
					fill = 'background'
					bg_color = 'scroll_bg'
					stroke = '1'
					fg_color = 'border_fg'
		/>
		<drawstep	func = 'triangle'
					orientation = 'top'
					fill = 'foreground'
					fg_color = 'scroll_idle'
					width = '5'
					height = '6'
					xpos = 'right'
					ypos = 'center'
					padding = '0,0,2,0'
		/>
	</drawdata>
	<drawdata id = 'scrollbar_button_hover' cache = 'false' resolution = 'y<400'>
		<drawstep	func = 'square'
					fill = 'background'
					bg_color = 'scroll_button_hover'
					stroke = '1'
					fg_color = 'border_fg'
		/>
		<drawstep	func = 'triangle'
					orientation = 'top'
					fill = 'foreground'
					fg_color = 'scroll_triangle_hover'
					width = '5'
					height = '6'
					xpos = 'right'
					ypos = 'center'
					padding = '0,0,2,0'
		/>
	</drawdata>
</render_info>
